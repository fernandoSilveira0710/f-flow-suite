<Window x:Class="BootstrapperWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Instalador 2F Solutions" Height="320" Width="520" WindowStartupLocation="CenterScreen">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0" Margin="0 0 0 12">
      <TextBlock FontSize="20" FontWeight="Bold">2F Solutions</TextBlock>
      <TextBlock Foreground="Gray">Instalador com pr√©-requisito Node.js</TextBlock>
    </StackPanel>

    <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1" Padding="12" CornerRadius="6">
      <StackPanel>
        <TextBlock Text="Pronto para instalar." Margin="0 0 0 8"/>
        <ProgressBar x:Name="Progress" Height="16" Minimum="0" Maximum="100"/>
        <TextBlock x:Name="StatusText" Margin="0 8 0 0"/>
      </StackPanel>
    </Border>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 12 0 0">
      <Button x:Name="InstallButton" Content="Instalar" Width="100" Margin="0 0 8 0" Click="OnInstall"/>
      <Button x:Name="CloseButton" Content="Fechar" Width="100" Click="OnClose"/>
    </StackPanel>
  </Grid>
</Window>