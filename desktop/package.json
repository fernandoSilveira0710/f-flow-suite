{
  "name": "fflow-desktop",
  "version": "1.1.5",
  "private": true,
  "main": "dist/main.js",
  "description": "F-Flow Suite Desktop (ERP + API em Electron)",
  "author": "2F Solutions",
  "scripts": {
    "dev": "tsc -w & electron .",
    "build": "tsc",
    "dist": "tsc && npm --prefix ../client-local prune --omit=dev && electron-builder"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "electron": "^32.2.0",
    "typescript": "^5.6.3",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {},
  "build": {
    "appId": "com.2fsolutions.fflowsuite",
    "productName": "F-Flow Suite",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "compression": "maximum",
    "files": [
      "dist/main.js",
      "package.json"
    ],
    "extraResources": [
      { "from": "../client-local/dist", "to": "client-local/dist" },
      { "from": "../dist", "to": "erp-dist" },
      { "from": "../client-local/node_modules", "to": "client-local/node_modules" },
      { "from": "../client-local/prisma/migrations", "to": "prisma/migrations" },
      { "from": "../client-local/prisma/prisma/seed.db", "to": "seed.db" }
    ],
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] }
      ],
      "artifactName": "FFlowSuite_Setup_${version}.exe"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": false
    }
  }
}