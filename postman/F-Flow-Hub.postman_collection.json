          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "const json = pm.response.json();",
                  "pm.test('Retorna informações de instalação', function () {",
                  "  pm.expect(json).to.have.any.keys('needsSetup', 'status');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Obter Licença (Client)",
          "request": {
            "method": "GET",
