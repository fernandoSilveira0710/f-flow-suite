NODE_ENV=development

# Hub Configuration
HUB_BASE_URL=http://localhost:3001

# Server Configuration
CLIENT_HTTP_PORT=8081
LOCAL_SERVER_ENABLED=true
SKIP_MIGRATIONS=true

# Development and deployment flags
DEV_COMPOSE_ENABLED=false
RLS_ENFORCED=true

# Database Configuration
DATABASE_URL="file:./prisma/local.db"

# Sync Configuration
SYNC_INTERVAL_SEC=60
OFFLINE_GRACE_DAYS=7

# API Configuration
USE_LOCAL_API=true

# Feature Flags (MVP Modules)
MVP_POS_ENABLED=true
MVP_GROOMING_ENABLED=true
MVP_APPOINTMENTS_ENABLED=true
MVP_INVENTORY_ENABLED=true
MVP_CUSTOMERS_ENABLED=true
MVP_REPORTS_ENABLED=true

# Device Configuration
DEVICE_ID=00000000-0000-0000-0000-000000000000
SYNC_INTERVAL_MS=60000
OIDC_REQUIRED=false
LICENSE_FILE=./license.jwt
LICENSE_PUBLIC_KEY_PEM="-----BEGIN PUBLIC KEY-----\nYOUR_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"
LICENSE_RENEWAL_THRESHOLD_HOURS=24
LICENSE_DEV_EXPIRATION_HOURS=24