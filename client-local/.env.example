# Client local environment example
NODE_ENV=development

# Hub Configuration
HUB_BASE_URL=http://localhost:3000

# Server Configuration
CLIENT_HTTP_PORT=3010
LOCAL_SERVER_ENABLED=true

# Database Configuration
DATABASE_URL="file:./prisma/local.db"

# Local Paths (optional - auto-resolved if not set)
# LOCAL_DATA_DIR=
# LOCAL_LOG_DIR=

# Sync Configuration
SYNC_INTERVAL_SEC=60
OFFLINE_GRACE_DAYS=7

# API Configuration
USE_LOCAL_API=true

# Device Configuration
DEVICE_ID=00000000-0000-0000-0000-000000000000

# License Configuration (optional)
LICENSE_FILE=./license.jwt
LICENSE_PUBLIC_KEY_PEM="-----BEGIN PUBLIC KEY-----\nYOUR_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"
