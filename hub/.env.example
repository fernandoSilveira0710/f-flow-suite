NODE_ENV=development
PORT=3001
DATABASE_URL=postgresql://user:pass@localhost:5432/fflow

# Development and deployment flags
DEV_COMPOSE_ENABLED=false
RLS_ENFORCED=true

# OIDC IdP settings
OIDC_JWKS_URL=https://idp.example.com/.well-known/jwks.json
OIDC_ISSUER=https://idp.example.com/
OIDC_AUDIENCE=f-flow-suite-hub
OIDC_REQUIRED=true

# License settings
# Chave privada RS256 (desenvolvimento). Gere com:
# openssl genpkey -algorithm RSA -pkeyopt rsa_keygen_bits:2048 -out license_private.pem
# openssl rsa -pubout -in license_private.pem -out license_public.pem
LICENSE_PRIVATE_KEY_PEM="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
LICENSE_PUBLIC_KEY_PEM="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"
LICENSING_ENFORCED=true
LICENSE_JWT_EXPIRATION=24h

# Legacy OIDC settings (deprecated - use OIDC_JWKS_URL instead)
OIDC_ISSUER_URL=https://your-identity-provider/.well-known/openid-configuration
OIDC_CLIENT_ID=client-id
OIDC_CLIENT_SECRET=client-secret

SYNC_WEBHOOK_URL=https://example.com/webhooks/sync

# --- Mailer / Welcome email ---
# Habilita envio de email de boas-vindas após registro público
MAIL_ENABLE=false
# Provider suportado: 'resend' ou 'none'
MAIL_PROVIDER=resend
# Remetente (precisa ser um domínio verificado no provider, quando aplicável)
MAIL_FROM=contato@seu-dominio.com
# Chave API do Resend (se MAIL_PROVIDER=resend)
RESEND_API_KEY=

# Link de download do aplicativo desktop
# Sugestão: subir o instalador (.exe/.dmg/.AppImage) em um serviço gratuito
# Ex.: Google Drive (15GB grátis) - habilitar "Compartilhado com link".
# Coloque aqui o link público do arquivo. Você pode usar o formato direto:
# https://drive.google.com/uc?id=<FILE_ID>&export=download
DOWNLOAD_URL=
