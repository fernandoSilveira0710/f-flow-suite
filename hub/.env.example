# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://f_flow_user:f_flow_dev_password@localhost:5432/f_flow_hub

# Row Level Security (RLS) Configuration
RLS_TENANT_HEADER=x-tenant-id
RLS_ENFORCED=true

# OIDC Authentication Configuration
OIDC_JWKS_URL=https://your-auth-provider.com/.well-known/jwks.json
OIDC_ISSUER=https://your-auth-provider.com
OIDC_AUDIENCE=f-flow-suite
OIDC_REQUIRED=false

# Licensing Configuration
# Chave privada RS256 (desenvolvimento). Gere com:
# openssl genpkey -algorithm RSA -pkeyopt rsa_keygen_bits:2048 -out license_private.pem
# openssl rsa -pubout -in license_private.pem -out license_public.pem
LICENSE_PRIVATE_KEY_PEM="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
LICENSE_PUBLIC_KEY_PEM="-----BEGIN PUBLIC KEY-----\nYOUR_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"
LICENSING_ENFORCED=false

# Development Configuration
DEV_COMPOSE_ENABLED=true

# Logging
LOG_LEVEL=debug
