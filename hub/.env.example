NODE_ENV=development
PORT=8080
DATABASE_URL=postgresql://user:pass@localhost:5432/fflow

# OIDC IdP settings
OIDC_JWKS_URL=https://idp.example.com/.well-known/jwks.json
OIDC_ISSUER=https://idp.example.com/
OIDC_AUDIENCE=f-flow-suite-hub
OIDC_REQUIRED=true

# License settings
# Chave privada RS256 (desenvolvimento). Gere com:
# openssl genpkey -algorithm RSA -pkeyopt rsa_keygen_bits:2048 -out license_private.pem
# openssl rsa -pubout -in license_private.pem -out license_public.pem
LICENSE_PRIVATE_KEY_PEM="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
LICENSE_PUBLIC_KEY_PEM="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"
LICENSING_ENFORCED=true

# Legacy OIDC settings (deprecated - use OIDC_JWKS_URL instead)
OIDC_ISSUER_URL=https://your-identity-provider/.well-known/openid-configuration
OIDC_CLIENT_ID=client-id
OIDC_CLIENT_SECRET=client-secret

SYNC_WEBHOOK_URL=https://example.com/webhooks/sync
